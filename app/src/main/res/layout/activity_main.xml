<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.calenderData.CalenderActivity">

  <TextView
      android:id="@+id/text_choose_dates"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Choose Seizure Attack Dates"
      android:textSize="18sp"
      android:textColor="@android:color/black"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="16dp"/>

  <Button
      android:id="@+id/date_picker_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Pick a Date"
      app:layout_constraintTop_toBottomOf="@id/text_choose_dates"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="16dp"/>

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recycler_view_dates"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/date_picker_button"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
